- model_class = @lot.class
%h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:endtime) + ':'
  %br
  = @lot.endtime
%p
  %strong= model_class.human_attribute_name(:status) + ':'
  %br
  = @lot.status

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), lots_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_lot_path(@lot), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), lot_path(@lot), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
